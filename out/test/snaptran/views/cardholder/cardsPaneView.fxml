<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
  style="-fx-background-color: #f5f5f5; -fx-background-radius: 30;" maxHeight="-Infinity"
  maxWidth="-Infinity"
  minHeight="-Infinity" minWidth="-Infinity"
  prefHeight="377.0"
  prefWidth="513.0" xmlns="http://javafx.com/javafx/8"
  fx:controller="controllers.cardholder.CardsPaneController">
  <top>
    <Label BorderPane.alignment="CENTER" text="Cards">
      <font>
        <Font size="35.0"/>
      </font>
      <BorderPane.margin>
        <Insets top="20.0"/>
      </BorderPane.margin>
    </Label>
  </top>
  <center>
    <ListView style="-fx-background-color: #f5f5f5; -fx-control-inner-background: #f5f5f5;"
      BorderPane.alignment="CENTER" prefHeight="200.0"
      prefWidth="200.0"
      fx:id="cardsList"/>
  </center>
  <bottom>
    <HBox BorderPane.alignment="CENTER" alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
      spacing="30.0">
      <Button style="-fx-background-color: #56667A;" alignment="CENTER" maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
        onMouseClicked="#onAddCardButtonClicked" prefHeight="29.0" prefWidth="163.0"
        text="Add New Card" textFill="WHITE">
        <HBox.margin>
          <Insets/>
        </HBox.margin>
        <font>
          <Font size="16.0"/>
        </font>
      </Button>
      <Button style="-fx-background-color: #56667A;" alignment="CENTER" layoutX="185.0"
        layoutY="46.0"
        maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
        mnemonicParsing="false" onMouseClicked="#onAddBalanceButtonClicked" prefHeight="29.0"
        prefWidth="163.0" text="Add Balance" textFill="WHITE">
        <font>
          <Font size="16.0"/>
        </font>
      </Button>
    </HBox>
  </bottom>
</BorderPane>
